                    @Html.EditorFor(model => model.RangeMax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RangeMax, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryIcon, htmlAttributes: new { @class = "control-label col-md-2" })
                <select name="CategoryIcon" style="margin-left:18px;">
                    <option value="fa fa-car">&#Xf1b9;</option>
                    <option value="fa fa-bus">&#Xf207;</option>
                    <option value="fa fa-truck">&#Xf0d1;</option>
                </select>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
}

