@using CreditWorks.Models;

<h2>Create Vehicle Information</h2>
<form method="post" action="/VehicleInfo/SubmitForm" id="vehicleForm">
    <span></span>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td class="field-name">OwnerName:</td>
                <td>
                    <input type="text" name="OwnerName" required />
                </td>
                <td class="field-name">Manufacturer:</td>
                <td>
                    <select name="ManufacturerId" required>
                        @foreach (var manufacturer in ViewData["manufacturer"] as List<Vehicle_Manufacturer>)
                        {
                            <option value="@manufacturer.Id">@manufacturer.Manufacturer</option>
                        }                    
                    </select>               
                </td>
            </tr>           
            <tr>
                <td class="field-name">Year Of Manufacture:</td>
                <td colspan="3">
                    <input type="number" name="YearOfManufacture" required />
                </td>
            </tr>
            <tr>
                <td class="field-name">Weight Of Vehicle:</td>
                <td colspan="3" style="vertical-align:middle;">
                    <input type="number" name="WeightOfVehicle" required />
                </td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
        <button class="btn btn-primary" type="submit" id="submit">Submit</button>
        <div>
            <div class="tip-sub"><span  class="label label-primary" style="font-size:14px; margin-top:5px;">Submission was successful.</span></div>
        </div>
    </div>
</form>
